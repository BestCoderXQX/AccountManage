<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="acffo.xqx.accountmanageacffo.ui.main.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_16"
            android:background="#0000"
            android:src="@mipmap/icon_back"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/standard_black_main"
            android:textSize="@dimen/txt_18"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/standard_line"></View>

    <RelativeLayout
        android:id="@+id/btnSetAdminPs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/icon_lock"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改登录密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:textColor="@color/standard_black_main"
            android:textSize="@dimen/txt_16"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/standard_line"></View>

    <RelativeLayout
        android:id="@+id/btnSetDeepGuardPs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/icon_deep_ps"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改深层保护密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:textColor="@color/standard_black_main"
            android:textSize="@dimen/txt_16"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/standard_line"></View>

    <!--密码柜-->
    <RelativeLayout
        android:id="@+id/btnArk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        >
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/icon_mlock"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深层保护"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:textColor="@color/standard_black_main"
            android:textSize="@dimen/txt_16"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"
        android:background="@color/standard_line"></View>

    <RelativeLayout
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        >
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/icon_about"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:textColor="@color/standard_black_main"
            android:textSize="@dimen/txt_16"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/standard_line"></View>


    <RelativeLayout
        android:id="@+id/btnM"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        >
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/icon_money"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打赏"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:textColor="@color/standard_black_main"
            android:textSize="@dimen/txt_16"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/standard_line"></View>

</LinearLayout>
